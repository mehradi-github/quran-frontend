{
  "name": "quran-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --watch",
    "cy:run": "pnpx cypress run",
    "delete:results": "rm -rf cypress/results/* || true",
    "delete:mochawesome-report": "rm -rf mochawesome-report/* || true",
    "mochawesome:merge": "pnpx mochawesome-merge \"cypress/results/*.json\" > mochawesome.json && pnpx marge mochawesome.json",
    "cy:report":"pnpm run delete:results && pnpm run delete:mochawesome-report && pnpm run cy:run && pnpm run mochawesome:merge",
    "cy:e2e": "start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
    "cy:e2e:headless": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
    "cy:component": "cypress open --component",
    "cy:component:headless": "cypress run --component"
  },
  "dependencies": {
    "next": "13.4.6",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/node": "20.3.1",
    "@types/react": "18.2.13",
    "@types/react-dom": "18.2.6",
    "@types/testing-library__jest-dom": "^5.14.6",
    "cypress-multi-reporters": "^1.6.3",
    "cypress": "12.15.0",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.6",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "msw": "^1.2.2",
    "start-server-and-test": "^2.0.0",
    "typescript": "5.1.3"
  }
}
