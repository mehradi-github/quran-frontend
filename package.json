{
  "name": "quran-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --watch",
    "schema:download": "pnpx apollo service:download --endpoint=http://localhost:3002/graphql ./src/graphql/graphql-schema.json",
    "codegen": "graphql-code-generator --config ./codegen.yml --watch",
    "cy:e2e": "start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
    "cy:e2e:headless": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
    "cy:component": "cypress open --component",
    "cy:component:headless": "cypress run --component"
  },
  "dependencies": {
    "@apollo/client": "^3.7.16",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@reduxjs/toolkit": "^1.9.5",
    "graphql": "^16.7.1",
    "next": "13.4.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^8.1.1",
    "reselect": "^4.1.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^4.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/node": "20.3.1",
    "@types/react": "18.2.13",
    "@types/react-dom": "18.2.6",
    "@types/testing-library__jest-dom": "^5.14.6",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "cypress": "12.15.0",
    "cypress-mochawesome-reporter": "^3.5.1",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.6",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest-dom": "^5.0.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-testing-library": "^5.11.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "msw": "^1.2.2",
    "prettier": "^3.0.0",
    "redux-logger": "^3.0.6",
    "start-server-and-test": "^2.0.0",
    "typescript": "5.1.3"
  }
